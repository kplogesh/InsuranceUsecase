pipeline {
    agent any 
    stages {
        stage('Build') 
        { 
            steps 
            {
                sh "chmod +x -R ${env.WORKSPACE}"
                sh '''      
                    assets/insurance/pipeline/stages/build/build.sh
                '''
            }
        }
        stage('Test') 
        { 
            steps 
            {
                withCredentials([file(credentialsId: 'vadigcs62496k8s', variable: 'KUBECONFIG')]) 
                {
                    sh '''
                        echo ${BUILD_NUMBER}
                        kubectl get po
                    '''
                }
            }
        }
        stage('Deploy') { 
            steps {
                echo 'Deploying'
            }
        }
    }
}